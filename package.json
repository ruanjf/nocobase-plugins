{
  "name": "nocobase-plugins",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "packages/*/*/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "nocobase": "nocobase",
    "pm": "nocobase pm",
    "dev": "nocobase dev",
    "dev-client-p": "cross-env PROXY_TARGET_URL=http://127.0.0.1:13005 nocobase dev --client -p 13004",
    "dev-server-p": "nocobase dev --server -p 13005",
    "start": "nocobase start",
    "clean": "nocobase clean",
    "build": "nocobase build",
    "test": "nocobase test",
    "e2e": "nocobase e2e",
    "tar": "nocobase tar",
    "postinstall": "nocobase postinstall",
    "lint": "eslint ."
  },
  "resolutions": {
    "cytoscape": "3.28.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0"
  },
  "dependencies": {
    "@nocobase/cli": "1.2.4-alpha",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@nocobase/devtools": "1.2.4-alpha"
  }
}
